<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<View fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" stylesheets="@main.css" xmlns="http://javafx.com/javafx/21.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.MainPresenter">
  <center>
    <VBox styleClass="box">
      <children>
        <Button fx:id="button" mnemonicParsing="false" onAction="#updateColor" text="%button.text">
          <graphic>
            <Icon content="PALETTE" />
          </graphic>
        </Button>
        <Label fx:id="color" text="%color.text" />
        <Label fx:id="label" />
        <Label>Hola Carola</Label>
      </children>
    </VBox>
  </center>
</View>
